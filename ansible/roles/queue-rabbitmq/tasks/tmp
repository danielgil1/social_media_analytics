- name: Install .deb package RabbitMQ.
  apt:
    deb: '{{ rabbitmq_download_url }}'

- name: System Update
  apt:
    update_cache: yes
    upgrade: dist

- name: Install list of packages for MQ
  apt:
    name: "{{ packages }}"
  vars:
    packages:
    - erlang
    - rabbitmq-server

- name: Start Rabbit Service
  systemd:
    name: rabbitmq-server.service
    state: started

- name: Enable RMQ Service
  systemd:
    name: rabbitmq-server.service
    enabled: yes

